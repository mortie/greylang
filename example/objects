#!/usr/bin/env lang

C = {
	foo = "morning";

	// Getter and setter for foo
	$foo = { foo };
	$$foo = { foo = $1 };

	{}
};

// Create two instances of C
a = C();
b = C();

// Modify a's foo by calling a setter
$$(a, "foo", "evening");

// First prints evening, then morning
print!($(a, "foo"));
print!($(b, "foo"));
